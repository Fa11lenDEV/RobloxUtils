{
    "manifest_version": 3,
    "name": "Roblox Utils",
    "description": "Roblox Utils!",
    "version": "0.0.1",
    "icons": {
        
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "cookies",
        "*://*.roblox.com/",
        "storage",
        "activeTab"
    ],
    "content_scripts": [
        {
            "js": [
                "utils/dom.js",
                "utils/parsers.js",
                "data/greetings.js",
                "features/income-estimator.js",
                "features/robux-converter.js",
                "features/profile-customizer.js",
                "services/supabase-client.js",
                "ui/extension-menu.js",
                "main.js"
            ],
            "css": [
                "style.css"
            ],
            "matches": [
                "*://*.roblox.com/*home*"
            ]
        }
    ],
    "web_accessible_resources": [
    {
      "resources": [
        "utils/dom.js",
        "utils/parsers.js",
        "data/greetings.js",
        "features/income-estimator.js",
        "features/robux-converter.js",
        "features/profile-customizer.js",
        "services/supabase-client.js",
        "ui/extension-menu.js",
        "main.js"
      ],
      "matches": ["https://www.roblox.com/*"]
    }
  ]
}